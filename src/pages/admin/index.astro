---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Nodo Admin - Login">
  <div class="min-h-screen flex items-center justify-center bg-gray-50">
    <div class="max-w-md w-full bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
      <div class="text-center mb-8">
        <span class="text-3xl font-bold text-nodo-purple">n<span class="text-nodo-grey">odo</span></span>
        <h2 class="text-xl font-semibold text-gray-700 mt-4">Panel Administrativo</h2>
      </div>
      
      <form action="/admin/dashboard" class="space-y-6">
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Usuario</label>
          <input type="text" id="email" name="email" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-nodo-purple focus:border-transparent outline-none" />
        </div>
        
        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Contrase√±a</label>
          <input type="password" id="password" name="password" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-nodo-purple focus:border-transparent outline-none" />
        </div>
        
        <button type="submit" class="w-full py-3 bg-nodo-purple text-white font-bold rounded-lg hover:bg-purple-700 transition-colors">
          Ingresar
        </button>
      </form>
    </div>
  </div>
</Layout>
